<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bg_shadow" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/details_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            android:id="@+id/details_card_id"
            android:layout_below="@+id/details_image_view"
            layout="@layout/details_card_bottom"
            android:visibility="gone" />

        <ListView
            android:id="@+id/comment_list_id"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/details_card_id"
            android:visibility="gone" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>